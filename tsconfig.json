{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "module": "ESNext",
    "noEmit": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    },
    "types": []
  },
  "include": ["src"],
  "exclude": ["src/**/*.test.ts", "test"]
}
